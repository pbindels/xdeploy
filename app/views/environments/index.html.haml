.span12
  .pull-right
    = link_to new_environment_path, :class => "btn btn-success" do
      %i.icon-white.icon-plus-sign
      Environment
  %h1 Environments

  %table.table.table-hover.table-striped.table-condensed
    %thead
      %tr
        %th Name
        %th Env Prefix#
        %th Edit
        %th Delete
    %tbody
      - @environments.sort{|a,b| a.name <=> b.name}.each do |environment|
        %tr
          %td
            = link_to environment.name, environment_path(environment)
            \-
            %strong= environment.code
          %td
            = environment.env_id
          %td
            = link_to edit_environment_path(environment) do
              %i.icon-edit
          %td
            - if @auth
              = link_to environment, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                %i.icon-trash
    
